<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/login.css">
        <title>Seller Register</title>
    </head>



    <body>
        <img class="wave" src="/asset/wave.png">
        <div class="container">
            
            <div class="img">
                <img src="/asset/ban.svg">
            </div>
            
            <div class="login-content">
                <form action="/sellerAuth/register" method="POST">

                    <a href="/" class="hlink"> <img class ="avtar" src="/asset/avatar.png"> </a>
                    <h2 class="heading">Welcome</h2>
                    <% if(locals.msg){%>
                        <div class="error"><%= msg%></div>
                    <% } %>
                    <div class="input-div one">
                        <div class="i">
                                <i class="fas fa-user"></i>
                        </div>
                        <div class="div">
                                <h5>Email Address</h5>
                                <input name="email" type="text" class="input" required>
                        </div>
                    </div>

                    <div class="input-div pass">
                        <div class="i"> 
                                <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                                <h5>Password</h5>
                                <input name="password" type="password" class="input" required>
                        </div>
                    </div>  
                    
                    <div class="input-div one">
                        <div class="i">
                                <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                                <h5>Re-enter Password</h5>
                                <input name="repassword" type="password" class="input" required>
                        </div>
                    </div>

                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div class="div">
                                <h5>Phone Number</h5>
                                <input name="phoneno" type="text" class="input" required>
                        </div>
                    </div>

                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-address-book"></i>
                        </div>
                        <div class="div">
                                <h5>Shop Name</h5>
                                <input name="shopname" type="text" class="input" required>
                        </div>
                    </div>

                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-address-card"></i>
                        </div>
                        <div class="div">
                                <h5>Address</h5>
                                <input name="address" type="text" class="input" required>
                        </div>
                    </div>
                    <button class="btn">SIGN-UP</button>

                    <div class="create"><a href="/sellerAuth/login">Already a Seller - Login</a></div>
                
                </form>
            </div>
        </div>
        


        
        <script type="text/javascript">
            const inputs = document.querySelectorAll(".input");
            function addcl(){
                let parent = this.parentNode.parentNode;
                parent.classList.add("focus");
            }

            function remcl(){
                let parent = this.parentNode.parentNode;
                if(this.value == ""){
                    parent.classList.remove("focus");
                }
            }


            inputs.forEach(input => {
                input.addEventListener("focus", addcl);
                input.addEventListener("blur", remcl);
            });
        </script>
        
        
        <script src="https://kit.fontawesome.com/a81368914c.js"></script>    
    </body>
</html>