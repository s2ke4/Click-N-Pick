<link rel="stylesheet" href="/css/productinfo.css">


<%-include("../partials/customerNav") %>
<body>
    <div class="container">
        <div className="image-area">
            <div class="uploadImage">
                <div class="slide-container">
                    <% attachments.forEach((img)=>{ %>
                        <div class="slide fade">
                            <img src="/uploads/<%=img%>" alt="product image">
                        </div>
                    <% }) %>
                </div>
                <div class="dots-container">
                    <% attachments.forEach((img)=>{ %>
                        <span class="dot"></span>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="InfoContainer">
            <h1><%=item.product_name%></h1>
            <h5><%=item.brand_name%></h5>
            <div class="amount">
                <h2>Price : â‚¹ <%=item.price%></h2>
                <h3 style="color: #07db00;"><%=item.discount%> % off</h3>
            </div>
            <div class="button-area">
                <div class="btn1" >
                    <button class="toWishlist">Add to Wishlist</button>
                </div>
                <div class="btn2" >
                    <button class="toCart">Add to Cart</button>
                </div>
            </div>
            <p><strong>Description: </strong><%=item.prod_description%></p>
            <h5><%=item.product_color%></h5>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="/js/productinfo.js"></script>
</body>