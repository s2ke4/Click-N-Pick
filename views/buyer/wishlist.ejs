<%- include("../partials/customerNav") %>
<link rel="stylesheet" href="/css/cart.css">
<body>
    <div class="heading">
        <h2>Your WishList</h2>
        <img src="/asset/wishList.png"  alt="">
    </div>
    <p class="empty-cart"  style="display: <%= items.length!=0?'none':'block'%>;">
        <i class="fas fa-heart-broken fa-2x empty-cart"> Your wishlist is empty!</i><br>
        <button class="back"><a href="/">Back To Shopping</a></button>
    </p>
    <div class="user-cart" style="display: <%= items.length==0?'none':'block'%>;">
        <table>
            <tbody>
                <tr>
                    <th></th>
                    <th>Item</th>
                    <th>Price Per Item</th>
                    <th>Move To Cart</th>
                    <th>Remove From WishList</th>
                </tr>
                <% for(let i=0;i< items.length;i++){ %>
                    <tr>
                        <td><img src="/uploads/<%=items[i].img%>" width="50px" height="50px" alt=""></td>
                        <td><a href="/buyer/productInfo/<%=items[i].id%>"><%=items[i].name%></a></td>
                        <td class="price-per-item"><%=items[i].price%></td>
                        <td><button class="move-to-wishlist" onclick="handleMoveToCart(this,<%=items[i].id%>,<%= user.id%>)">Move To Cart</button></td>
                        <td><i class="fas del fa-trash-alt" onclick="handleDelete(this,<%=items[i].id%>,<%= user.id%>)"></i></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="major-btn">
            <button class="back"><a href="/">Back To Shopping</a></button>
        </div>
    </div>
    <!-- Footer -->
    <%- include("../partials/footer.ejs") %>
    <!-- Footer -->
    <script src="https://kit.fontawesome.com/a81368914c.js"></script> 
    <script src="/js/wishlist.js"></script>
</body>