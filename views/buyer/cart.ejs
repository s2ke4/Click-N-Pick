<%- include("../partials/customerNav") %>
<link rel="stylesheet" href="/css/cart.css">
<body>
    <div class="heading">
        <h2>Your Cart</h2>
        <img src="/asset/bag.png" alt="">
    </div>
    <table>
        <tbody>
            <tr>
                <th></th>
                <th>Item</th>
                <th>Price Per Item</th>
                <th>Quantity</th>
                <th>Total Price(INR)</th>
                <th>Move To WishList</th>
                <th></th>
            </tr>
            <% for(let i=0;i < items.length;i++){ %>
                <tr>
                    <% let total =  items[i].price*items[i].quantity%>
                    <td><img src="/uploads/<%=items[i].img%>" width="50px" height="50px" alt=""></td>
                    <td><a href="/buyer/productInfo/<%=items[i].id%>"><%=items[i].name%></a></td>
                    <td class="price-per-item"><%=items[i].price%></td>
                    <td>
                        <span class="quan">
                            <p class="quantity">
                                <span onclick="increment(this,<%=items[i].id%>,<%= user.id%>)" class="increment">+</span> 
                                <input onchange="handleChange(this,<%=items[i].id%>,<%= user.id%>)" oninput="handleInput(this,<%=items[i].id%>,<%= user.id%>)" onblur="handleBlur(this,<%=items[i].id%>,<%= user.id%>)" class="number" min="1" type="number" value="<%=items[i].quantity%>"> 
                                <span class="decrement" onclick="decrement(this,<%=items[i].id%>,<%= user.id%>)">-</span>
                            </p>
                        </span>
                    </td>
                    <td class="total-per-item"><%=total%></td>
                    <td><button class="move-to-wishlist" onclick="handleMoveToWishlist(this,<%=items[i].id%>,<%= user.id%>)">Move To WishList</button></td>
                    <td><i class="fas del fa-trash-alt" onclick="handleDelete(this,<%=items[i].id%>,<%= user.id%>)"></i></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="total">
        <p>Total Amount</p>
        <p class="total-amount">2000000</p>
    </div>
    <div class="major-btn">
        <button class="back"><a href="/">Back To Shopping</a></button>
        <button class="proceed"><a href="./proceedOrder">Proceed With Your Order</a></button>
    </div>
        <!-- Footer -->
        <footer class="bg-dark text-center text-white">
       
            <div class="container p-4">
    
                <section class="mb-4" style="padding-top: 2rem; padding-bottom: 2rem;">
                    <h2>
                        E-Commerce
                    </h2>
                    
                </section>
                
                <section>
                    <div class="row">
                    <div class="col">
                        <img src="/asset/truck-1.jpg" class="img-fluid" alt="ResponsiveImage" height="75" width="75" style="border-radius: 50%;">
                        <h5 style="padding-top: 1rem;">Fast and Free Delivery *</h5>
                    </div>
                    <div class="col">
                        <img src="/asset/easy-returns.png" class="img-fluid" alt="ResponsiveImage" height="75" width="75" style="border-radius: 50%;">
                        <h5 style="padding-top: 1rem;">Easy Returns within 15 days</h5>
                    </div>
                    <div class="col">
                        <img src="/asset/customercare.png" class="img-fluid" alt="ResponsiveImage" height="75" width="75" style="border-radius: 50%;">
                        <h5 style="padding-top: 1rem;">24 x 7 Customer Support</h5>
                    </div>
                    </div>
                </section>
    
                <div class="row">
                    <div class="col">
                        <a href="#" class="btn btn-sm btn-outline-light text-center" style="margin: 2rem;">About Us</a>
                    </div>
                    <div class="col">
                        <a href="#" class="btn btn-sm btn-outline-success" style="margin: 2rem;">Support Us</a>
                    </div>
                    <div class="col">
                        <a href="mailto:doubtbin@gmail.com" class="btn btn-sm btn-outline-primary" style="margin: 2rem;">Contact Us</a>
                    </div>
                </div>
    
                <p style="color: grey; font-size: 0.75rem;">*Delivery is free for orders above ₹499/-</p>
    
            </div>
    
        
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2021 Copyright:
            <a class="text-white" href="https://github.com/s2ke4">S2KE4</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
</body>
<script src="https://kit.fontawesome.com/a81368914c.js"></script> 
<script src="/js/cart.js"></script>